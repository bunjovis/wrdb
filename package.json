{
  "name": "wrdb",
  "version": "1.0.0",
  "description": "A database for homewine recipes",
  "main": "server/app.js",
  "repository": "https://github.com/bunjovis/wrdb.git",
  "author": "Kari Harmaahieta <kari.harmaahieta@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.test.js --exit --timeout 10000",
    "client": "cd client && yarn && yarn build",
    "dev": "env NODE_ENV=dev concurrently \"nodemon server/app.js\" \"cd client && yarn start\"",
    "start": "yarn run client && node server/app.js",
    "lint": "eslint server && cd client && eslint src",
    "postinstall": "cd client && yarn install"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.11",
    "mongoose-sanitizer-plugin": "^1.1.0",
    "multer": "^1.4.2",
    "node-fetch": "^2.6.0",
    "xss-filters": "^1.2.7"
  },
  "engines": {
    "node": "13.x"
  }
}